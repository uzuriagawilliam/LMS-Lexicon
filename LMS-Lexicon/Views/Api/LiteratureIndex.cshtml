<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Title)*@
                @Html.ActionLink("Title", "LiteratureIndex", new { sortOrder = ViewBag.NameSortParm })
            </th>
